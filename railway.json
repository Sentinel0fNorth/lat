{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests -Dmaven.compiler.source=17 -Dmaven.compiler.target=17"
  },
  "deploy": {
    "startCommand": "java -Xmx512m -Dserver.port=$PORT -Dspring.profiles.active=prod -jar target/lat-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/actuator/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
